<!DOCTYPE html>
<html>
  <head>
    <title>ROADSIDE ASSISTANCE APPLICATION</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/indexStyleSheet.css' />
  </head>
  <body>
    <div class="container">
      <!-- User login page header-->
      <header>
        <h1>
          <img src="/images/RoadsideAssistanceIcon01.png" alt="">
        </h1>
        <h2 id="CentralIcon">
          <img src="/images/GuyWithHelmetIcon01.png" alt="">
        </h2>
        <h3>User Login</h3>
      </header>

      <form action="" method="post">
        <div class="form-group">
          <label for="">Username</label>
          <input  type="text" name="userName">
        </div>
        <div class="form-group">
          <label for="">Password</label>
          <input  type="password" name="userPwd">
        </div>
        <select class="form-group" name="userType">
          <option value="">Please select user type</option>
          <option value="driver">Driver</option>
          <option value="technician">Technician</option>
          <option value="admin">Administrator</option>
        </select>
        <input type="submit" name="submitButton" value="Login">
      </form>
    </div>
  </body>
</html>
